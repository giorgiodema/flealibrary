<!-- Mostra la wish list dell'utente che gli passo dal profilo -->

<% if @id == current_user.id.to_s %>    <!-- se l'id passato e lo user corrispondono -->
    <h3 class="favourite_title"> My Favourite List </h3>        <!-- , sono nel mio profilo -->
<% else %>                              <!--non Ã¨ possibile vedere la lista dei favoriti degli altri utenti ma lascio comunque questo controllo -->
    <% owner = User.find(@id).username %>
    <h3 class="favourite_title"><%= owner %>'s Favourities List </h3>
<% end %>

<%= render partial: "./ads_list", locals: { ads: @favourities, view: "favourities" } %>

<% @favourities.each do |book| %>
    <%= image_tag(book.link_to_coverbook) %>
    <br>
    <h7> Title: </h7><%= book.book_title %>
    <br>
    <h7> Authors: </h7><%= book.book_authors.tr('[', '').tr(']','').tr('"', '') %>
    <br>
    <h7> Publisher: </h7><%= book.publisher %>
    <br>
    <h7> Identifier: </h7><%= book.identifier.tr('[', '').tr(']','').tr('"', '').tr(',','') %>
    <br><br>
<% end %>
